    "@types/node": "^14.14.6",
    "@types/node-schedule": "^1.3.1",
    "commitlint": "^11.0.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "fancy-log": "^1.3.3",
