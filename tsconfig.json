{
  "compilerOptions": {
    "target": "esnext",                          
    "module": "commonjs",                     
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "/node_modules/"
  ] 
}
